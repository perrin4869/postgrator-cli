{
    "extends": "airbnb-base",

    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },

    "env": {
        "es6": true,
        "node": true,
        "browser": false
    },

    "rules": {
        "arrow-body-style": "off",
        "comma-dangle": ["error", "always-multiline"],
        "global-require": "off",
        "indent": ["warn", 4],
        "linebreak-style": "off",
        "no-console": "off",
        "import/no-dynamic-require": "off",
        "max-len": ["error", { "code": 140 }],
        "no-param-reassign": "off",
        "no-use-before-define": "off"
    }
}
